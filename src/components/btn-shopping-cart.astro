  <style>
      .shopping-cart {
      position: fixed;
      top: 90px;
      right: 20px;
      background-color: #ffffff;
      color: white;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.3);
      text-decoration: none;
      font-size: 30px;
      z-index: 1;
      opacity: 0;
      transition: opacity 1s ease-out;
      animation: shadow-animation auto linear both;
            animation-timeline: scroll(root block) ;
            animation-range: entry 1000px height 100%;
  }
    

    .whatsapp-button:hover {
      background-color: #1DA851;
    }



  .shopping-cart.visible {
    
    opacity: 1;
  }

