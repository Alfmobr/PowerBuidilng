---
interface Props {
	title: string;
	body: string;
	href: string;
	src: string;
	price : string
}

const {src , href, title, body , price } = Astro.props;
---

<div class="link-card">

	<div class="container-img">
		<img src={src} alt=''>
	</div>	
	<h2>
		{title}
	</h2>
	<p>
		{body}

		<span>{price}</span>
	</p>
	<a class="whatsapp-button" href={href}>
		comprar por whatsapp
		<svg  class="icon icon-tabler icon-tabler-brand-whatsapp" 
		width="26"
		 height="26"
		  viewBox="0 0 24 24" 
		  stroke-width="1.5" 
		  stroke="#fff" 
		  fill="none" 
		  stroke-linecap="round" 
		  stroke-linejoin="round">
			<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
			<path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
			<path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
		  </svg>
	</a>
</div>

<style>
	.link-card{
		width: clamp(270px , 90% , 310px);
		height: 350px;
		background:#ffffff;
		padding: 10px;
		box-sizing: border-box;
		color: #333;
		border-radius: 8px;
		display: grid;

		.whatsapp-button {
			text-decoration: none;
			color: #ffffff;
			padding: 10px;
			background-color: #25D366;
			display: flex;
            justify-content: center;
           align-items: center;
		   gap: 5px;
			box-sizing: border-box;
			box-shadow: 0 2px 5px rgba(0,0,0,0.3);
			text-align: center;
			font-size: 15px;
			height: max-content;
			width: max-content;
			border-radius: 10px;
			
			&:hover {
      background-color: #1DA851;
    }
		}
}

.container-img{
width: 100%;
height: 150px;
background-color: rgb(255, 255, 255);
position: relative;


	img {
		    width:100%;
            height: 100%;
            object-fit: contain;
            display: block;

			&:hover{
				scale: 1.1;
			}
			}
}


</style>
