	<div class="container-img"  >
		<img src={src} alt=''>
	</div>	
	<h2>
		{title}
	</h2>
	<p>
		{body}
	
	</p>
	

	<span> Price {price} <span class="red">No Idefined</span> </span>

<div class="container-btn-group">
	<a style="pointer-events: none;" class="btn-add-product" href={href}>
