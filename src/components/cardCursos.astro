---
interface Props {
	title: string;
	href: string;
	body : string;

}

const { href, title, body } = Astro.props;
---

<div class="link-card"> 

	<h2 style="color: #333;  font-size: 20px; ">
		{title}
	</h2>

<div class="container-btn-group">
	<a class="btn-add-product" href={href}>
		{body}  

		<svg  class="icon icon-tabler icon-tabler-brand-whatsapp" 
		width="26"
		 height="26"
		  viewBox="0 0 24 24" 
		  stroke-width="1.5" 
		  stroke="#fff" 
		  fill="none" 
		  stroke-linecap="round" 
		  stroke-linejoin="round">
			<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
			<path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
			<path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
		  </svg>

	</a>
  </div>
</div>

<style>
	.link-card{
		/* width: clamp(300px , 90% , 610px); */
		width: auto;
		height: auto;
		background:#ffffff;
		box-sizing: border-box;
		padding: 10px;
		box-sizing: border-box;
		border-radius: 8px;
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 10px;

		box-shadow: 0 5px 10px rgba(0,0,0,0.3);
		


		.container-btn-group{
			

		.btn-add-product{
			text-decoration: none;
			color: #ffffff;
			padding: 10px;
			background-color: #198bf5;
			display: flex;
            justify-content: center;
           align-items: center;
			box-sizing: border-box;
			gap: 5px;
			box-shadow: 0 2px 5px rgba(0,0,0,0.3);
			text-align: center;
			font-size: 15px;
			height: max-content;
			width: max-content;
			border-radius: 10px;
			
			&:hover {
      background-color: #1DA851;
    }
		}
 
		.whatsapp-button {
			text-decoration: none;
			color: #ffffff;
			padding: 10px;
			background-color: #25D366;
			display: flex;
            justify-content: center;
           align-items: center;
			box-sizing: border-box;
			gap: 5px;
			box-shadow: 0 2px 5px rgba(0,0,0,0.3);
			text-align: center;
			font-size: 15px;
			height: max-content;
			width: max-content;
			border-radius: 10px;
			
			&:hover {
      background-color: #1DA851;
    }
		}
	}
}
</style>
